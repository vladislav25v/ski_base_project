generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  role         String
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model AllowedEmail {
  id              String    @id @default(uuid())
  email           String
  emailNormalized String    @unique @map("email_normalized")
  isActive        Boolean   @default(true) @map("is_active")
  comment         String?
  createdByUserId String?   @map("created_by_user_id")
  updatedByUserId String?   @map("updated_by_user_id")
  lastUsedAt      DateTime? @map("last_used_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("allowed_emails")
}

model AuthEvent {
  id              BigInt   @id @default(autoincrement())
  action          String
  status          String
  reason          String?
  emailNormalized String?  @map("email_normalized")
  userId          String?  @map("user_id")
  ip              String?
  userAgent       String?  @map("user_agent")
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([createdAt], map: "auth_events_created_at_idx")
  @@index([action, status], map: "auth_events_action_status_idx")
  @@index([emailNormalized], map: "auth_events_email_normalized_idx")
  @@map("auth_events")
}

model News {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  title     String
  text      String
  imageUrl  String?  @map("image_url")

  @@map("news")
}

model GalleryPicture {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now()) @map("created_at")
  storagePath String   @map("storage_path")
  caption     String?
  width       Int?
  height      Int?
  blurhash    String?

  @@map("gallery_pictures")
}

model Schedule {
  id        Int      @id @default(autoincrement())
  dayOfWeek Int      @unique @map("day_of_week")
  isOpen    Boolean  @default(false) @map("is_open")
  startTime String?  @map("start_time")
  endTime   String?  @map("end_time")

  @@map("schedule")
}

model TrainingSchedule {
  id        Int      @id @default(autoincrement())
  dayOfWeek Int      @unique @map("day_of_week")
  isOpen    Boolean  @default(false) @map("is_open")
  slots     TrainingScheduleSlot[]

  @@map("training_schedule")
}

model TrainingScheduleSlot {
  id        Int              @id @default(autoincrement())
  dayId     Int              @map("day_id")
  startTime String           @map("start_time")
  endTime   String           @map("end_time")
  day       TrainingSchedule @relation(fields: [dayId], references: [id], onDelete: Cascade)

  @@map("training_schedule_slots")
}
